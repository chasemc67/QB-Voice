// Intent to create an invoice
// Must also supply name and $ amount

{
    "name":"Create Invoice",
    "contexts":[],
    "templates": [
        "Send an @Invoice:invoice to @sys.given-name:name for @sys.unit-currency:currency",
        "Send @sys.given-name:name a @sys.unit-currency:currency @Invoice:invoice",
        "Send an @Invoice:invoice",
        "Create an @Invoice:invoice",
        "Create an @Invoice:invoice to @sys.given-name:name for @sys.unit-currency:currency"
    ],
    "responses": [
        {
            "action": "Invoice",
            "affectedContexts": ["creatingDocument"],
            "parameters":[
                {
                    "required":true,
                    "dataType":"@sys.given-name",
                    "name":"name",
                    "value":"$name",
                    "prompts":[
                        "To whom should I send this Invoice?"
                    ]
                },
                {
                    "required":true,
                    "dataType":"@sys.unit-currency",
                    "name":"currency",
                    "value":"$currency",
                    "prompts":[
                        "for how much?"
                    ]
                },
                {
                    "dataType":"@Invoice",
                    "name":"invoice",
                    "value":"$invoice"
                }
            ],
            "speech": "Ok, sending an invoice to $name for $currency.amount dollars."
        }
    ]
}
