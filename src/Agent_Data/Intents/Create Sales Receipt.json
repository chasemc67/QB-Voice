// Intent to create an sales receipt
// Must also supply name and $ amount

{
    "name":"Create Sales Receipt",
    "contexts":[],
    "templates": [
        "Send an @SalesReceipt:receipt to @sys.given-name:name for @sys.unit-currency:currency",
        "Send @sys.given-name:name a @sys.unit-currency:currency @SalesReceipt:receipt",
        "Send an @SalesReceipt:receipt",
        "Create an @SalesReceipt:receipt",
        "Create an @SalesReceipt:receipt to @sys.given-name:name for @sys.unit-currency:currency"
    ],
    "responses": [
        {
            "action": "SalesReceipt",
            "affectedContexts": ["creatingDocument"],
            "parameters":[
                {
                    "required":true,
                    "dataType":"@sys.given-name",
                    "name":"name",
                    "value":"$name",
                    "prompts":[
                        "To whom should I send this Sales Receipt?"
                    ]
                },
                {
                    "required":true,
                    "dataType":"@sys.unit-currency",
                    "name":"currency",
                    "value":"$currency",
                    "prompts":[
                        "for how much?"
                    ]
                },
                {
                    "dataType":"@SalesReceipt",
                    "name":"receipt",
                    "value":"$receipt"
                }
            ],
            "speech": "Ok, sending sales receipt to $name for $currency.amount dollars."
        }
    ]
}
